<h1>Albums</h1>

<div class="table-responsive">
  <table class="table table-hover">

    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Artist</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @albums.each do |album| %>
        <tr>
          <td><%= album.title %></td>
          <td><%= album.artist %></td>
          <td class="text-nowrap">
            <%= link_to 'Show', album_path(album) %> |
            <%= link_to 'Edit', edit_album_path(album) %> |
            <%= button_to 'Delete', album_path(album), method: :delete, data: { turbo: false }, class: 'btn btn-link p-0 pb-1', form: { class: 'd-inline' } %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>

<p>
  <%= link_to 'New Album', new_album_path %>
</p>

